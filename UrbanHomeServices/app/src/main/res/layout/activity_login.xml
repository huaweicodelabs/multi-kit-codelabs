<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="2"
    android:background="@drawable/ic_bg_image">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_logo_main"
            android:contentDescription="@string/app_logo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/hwid_signin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/ic_huawei_login_btn"
            android:gravity="center"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ic_connect_with"
            android:visibility="gone"
            android:contentDescription="@string/divider_line"
            />
        <com.facebook.login.widget.LoginButton
            android:id="@+id/signWithFacebookBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>
