<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/hiad_2_dp"
    android:background="@drawable/ic_bg_image"
    android:layout_margin="@dimen/hiad_5_dp"
    app:cardElevation="@dimen/hiad_4_dp"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/hiad_10_dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/serviceImg"
            android:layout_width="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_management"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="100dp"
            android:contentDescription="@string/service_image" />
        <TextView
            android:id="@+id/serviceName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bottomcardview"
            android:gravity="center"
            android:text="@string/services_cat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serviceImg"
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>