<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@color/colorAccent">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="45dp"
        card_view:cardElevation="6dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/screen3"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/heading_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Decorate Home Virtually"
        android:textColor="@color/selected_product_count"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vitrually decorate your home using Scene 3D view.!"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textColor="@color/selected_product_count"
        android:layout_below="@id/heading_tv"
        android:gravity="center"/>
</RelativeLayout>